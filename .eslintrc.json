{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "impliedStrict": true,
      "classes": true
    }
  },
  "plugins": ["prettier"],
  "rules": {
    "no-await-in-loop": 0,
    "prettier/prettier": 2,
    "no-unused-vars": [
      1,
      {
        "ignoreSiblings": true,
        "argsIgnorePattern": "val|res|next|err|promise"
      }
    ],
    "no-console": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "class-methods-use-this": 0,
    "semi": ["warn", "never"],
    "no-process-exit": 0,
    "no-restricted-syntax": 0,
    "no-shadow": [
      2,
      {
        "hoist": "all",
        "allow": ["resolve", "reject", "done", "next", "err", "error"]
      }
    ]
  }
}
